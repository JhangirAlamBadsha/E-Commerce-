@model MVT.Web.Areas.Dashboard.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Index";
}

<div>
    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Search</label>
                    <input class="form-control" id="searchTxt" name="Search" value="Search" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Action</label>
                    <div class="row">
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="searchBtn">Search</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="resetBtn">Reset</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="newBtn">New</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="font-weight-bold">ID</th>
                <th class="font-weight-bold">Name</th>
                <th class="font-weight-bold">Gmail</th>
                <th class="font-weight-bold wrap-td">Comments</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Contacts!= null && Model.Contacts.Count > 0)
            {
                foreach (var  contact in Model.Contacts)
                {
            <tr>
                <td>@contact.ID</td>
                <td>
                    @contact.Name
                </td>
                <td>
                    @contact.Gmail
                </td>
                <td>
                    @contact.Comment
                </td>

            </tr>
                }
            }
            else
            {
                <tr><td colspan="3" class="text-danger">No Categories found.</td></tr>
            }
        </tbody>
    </table>
